{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npx vite build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install && cd backend && npm install",
  "functions": {
    "backend/api/**/*.ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    {
      "source": "/api/telegram/webhook",
      "destination": "backend/api/telegram/webhook.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "backend/api/index.ts"
    },
    {
      "source": "/assets/(.*)",
      "destination": "frontend/dist/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/dist/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Cron-Key" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
